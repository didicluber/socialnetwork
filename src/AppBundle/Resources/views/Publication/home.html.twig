{% extends "AppBundle:Layouts:layout.html.twig" %}

{% block content %}
     <div class="container">

         <div id="timeline" class="col-lg-7 box-default pull-left">
             <h1 class="box-header">Timeline</h1>
             <div class="box-content">
                 Publicaciones list
             </div>
         </div>

         <div id="user-card" class="col-lg-4 box-default pull-left">
             <div class="avatar">
                 {% if app.user.image == null %}
                     <img src="{{ asset('assets/images/default.png') }}" alt="{{ app.user.name }}">
                 {% else %}
                     <img src="{{ asset('uploads/media/'~app.user.id~'_usermedia/'~app.user.image) }}" alt="{{ app.user.name }}">
                 {% endif %}
             </div>

             <div class="name-surname">
                 <a href="#">{{ app.user.name }} {{ app.user.surname }}</a>
                 <div class="clearfix"></div>
                 <span class="nickname">
                     {{ app.user.nick }}
                 </span>
             </div>

             <div class="clearfix"></div>
         </div>

         <div id="new-publication" class="col-lg-4 box-default pull-left">
             <h1 class="box-header">Crear publicaci√≥n</h1>

             {{ form_start(form, {'action':'', 'method':'POST'}) }}
             {{ form_errors(form) }}
             {{ form_end(form) }}
         </div>
     </div>
{% endblock %}